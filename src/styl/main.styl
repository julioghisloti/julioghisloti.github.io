// Main File //

	//nib
	@import 'nib'
	
	//jeet
	@import 'jeet'
	
	//fonts
	@import 'fonts.styl'
	
	//colors
	$azul = #0000ff
	$cinza = #e0e0e0
	
	//tipografy
	link(color, bgColor)
		border-bottom 2px solid bgColor
		color color
		font-family $bold
		font-weight 100
		text-decoration none
		transition(.2s ease)
		
		&:hover
			border-bottom-color color

	h2
		font-family $title
		font-size 3.3em
		font-weight 100
		margin 0 7px
		
	p
		font-family $normal
		font-size 1.5em
		font-weight 100
		margin 0
		margin-bottom 20px
		
	
	body
		background-color $cinza
		margin 0
		//padding 20px
		
		#container
			background-color #fff
			box-shadow(0 5px 50px rgba(0, 0, 0, 0.38))
			overflow hidden
			width 100%
			
			//logo
			.logo
				padding 40px
				position absolute		
				
